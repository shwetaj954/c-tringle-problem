using namespace std;

int main()
{
    int rows;

    cout << "Enter number of rows: ";
    cin >> rows;

    for(int i = 1; i <= rows; i++)
    {
        for(int j = 1; j <= rows; j++)
        {
            cout <<i<< " ";
        }
        cout << "\n";
    }
    return 0;
}

Problem4:-
11111
11111
11111
11111
11111

Solution:-

#include <iostream>
using namespace std;

int main()
{
    int rows;

    cout << "Enter number of rows: ";
    cin >> rows;

    for(int i = 1; i <= rows; i++)
    {
        for(int j = 1; j <= rows; j++)
        {
            cout << "1";
        }
        cout << "\n";
    }
    return 0;
}

Problem5:-

*
**
***
****
*****

Solution:-

#include <iostream>
using namespace std;

int main()
{
    int rows;

    cout << "Enter number of rows: ";
    cin >> rows;

    for(int i = 1; i <= rows; i++)
    {
        for(int j = 1; j <= i; j++)
        {
            cout << "*";
        }
        cout << "\n";
    }
    return 0;
}
